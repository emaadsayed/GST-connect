<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GST Connect</title>
    <link rel="stylesheet" href="/stylesheets/myprofile.css" />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link href="https://unpkg.com/filepond/dist/filepond.css" rel="stylesheet">
    <link href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css" rel="stylesheet">
    <script defer src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"></script>
    <script defer src="https://unpkg.com/filepond-plugin-file-encode/dist/filepond-plugin-file-encode.js"></script>
    <script defer src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.js"></script>
    <script defer src="https://unpkg.com/filepond/dist/filepond.js"></script>
    <script defer src="/javascripts/fileUpload.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
  </head>

  <body>
    <div class="container">
        
      <!--------------------- TOP-NAV ---------------------->

      <div class="top-nav">
        <h1>SIESGSTportal<span>.</span></h1>
        <i class="material-icons menu">menu</i>
      </div>

      <!--------------------- SIDE-NAV ---------------------->

      <div class="position">
        <div class="side-nav open">
          <div class="user-info">
            <% if(typeof image == "undefined") { %>
              <a href="/users/myprofile" class="my-profile"><img src="/img/icons8-male-user-90.png" alt="Avatar" class="avatar" /></a>
            <% } else { %>
              <a href="/users/myprofile" class="my-profile"><img src="<%= image %>" alt="Avatar" class="avatar" /></a>
              <% } %>
            <a href="/users/myprofile" class="my-profile"><h3><%= name %></h3></a>
          </div>
  
          <ul>
            <li class="border">
              <i class="material-icons">settings_input_antenna</i>
              <a href="/users/connect">Connect</a>
            </li>
  
            <li class="border">
              <i class="material-icons">recent_actors</i>
              <a href="/users/projects">Projects<span class="fas fa-caret-down before "></span></a>
              <ul>
                <div class="inner">
                  <li id="i-top"> <i class="material-icons">person</i><a href="/users/myprojects">My Projects</a></li>
                  <li> <i class="material-icons">create</i><a href="/users/createproject">Create Project</a></li>
                </div>
              </ul>
            </li>
  
            <li class="border">
              <i class="material-icons">
                menu_book</i>
              <a class="extra" href="/users/books">Books<span class="fas fa-caret-down beforeTwo "></span></a>
              <ul>
                <div class="innerTwo">
                  <li id="i-top"> <i class="material-icons">person</i><a href="/users/mybooks">My Books</a></li>
                  <li> <i class="material-icons">create</i><a href="/users/createbook">Create Book</a></li>
                </div>
              </ul>
            </li>
            <form action="/logout" class="border s-hidden" method="POST">
              <i class="material-icons">east</i><button class="log" type="submit" style="cursor: pointer;">Log Out</button>
            </form>
          </ul>
        </div>
      </div>
  
      <!--------------------- RIGHT-SECTION ---------------------->

      
             <div class="container-one">
        

        <p class="line">My Profile</p>
        <form action="/users/myprofile" method="POST">
            <div class="card-body">
                <div>
                    <label>Profile Photo</label>
                    <input type="file" name="cover" class="filepond" required>
                  </div>
                <div class="event-name">
                    <div class="event-name-child">
                        <p class="name">Name </p>
                        <input type="text" placeholder="Full Name" name="name" value="<%= result.name %>" required>
                    </div>
                    <div class="event-name-child">
                        <label class="name" for="branch">Choose your branch</label>
                        <select name="branch" id="branch" class="i-name" required>
                          <option value="<%= result.branch %>"><%= result.branch %></option>
                        <option value="IT">IT</option>
                        <option value="CE">CE</option>
                        <option value="EXTC">EXTC</option>
                        <option value="ME">ME</option>
                        <option value="PPT">PPT</option>
                        <option value="ECE">ECE</option>
                        </select>
                    </div>
                    <div class="event-name-child">
                        <label class="name" for="year">Choose your year</label>
                        <select name="year" id="year" class="i-name" required>
                          <option value="<%= result.year %>"><%= result.year %></option>
                          <option value="FE">FE</option>
                          <option value="SE">SE</option>
                          <option value="TE">TE</option>
                          <option value="BE">BE</option>
                        </select>
                    </div>
                    <div class="event-name-child">
                        <p class="name">Contact</p>
                        <input type="text" placeholder="Contact" name="contact" id="contact" value="<%= result.contact %>">
                    </div>
                    <div class="event-name-child">
                        <p class="name">Instagram</p>
                        <input type="url" placeholder="Instagram link" name="instagram" id="instagram" value="<%= result.instagram %>">
                    </div>
                    <div class="event-name-child">
                        <p class="name">LinkedIn</p>
                        <input type="url" placeholder="LinkedIn link" name="linkedin" id="linkedIn" value="<%= result.linkedin %>">
                    </div>
                    <div class="event-name-child">
                        <p class="name">Facebook</p>
                        <input type="url" placeholder="Facebook link" name="facebook" id="facebook" value="<%= result.facebook %>">
                    </div>
                    <div class="event-name-child">
                        <p class="name">Skills</p>
                        <input type="text" placeholder="Skills" name="skills" id="skills" value="<%= result.skills %>">
                    </div>
                    <div class="event-name-child">
                        <p class="name">Bio</p>
                        <textarea type="text" class="i-name desc" name="bio" id="bio" placeholder="Enter your bio"><%= result.bio %></textarea>
                    </div>
                    <div class="event-name-child">
                        <label class="name" for="type">Type of Profile</label>
                        <select name="type" id="type" class="i-name" >
                          <option value="<%= result.type %>"><%= result.type %></option>
                        <option value="Private">Private</option>
                        <option value="Public">Public</option>
                        </select>
                    </div>
                   
                </div>
                <div><input type="submit" name="" value="SUBMIT" class="s-button"></div>

            </div>
        </form>    
  


             </div>

      
    </div> <!--/Container-->

    <script>
        const burger = document.querySelector(".top-nav i");
        const side = document.querySelector(".side-nav");
  
        burger.addEventListener("click", (e) => {
          side.classList.toggle("open");
          e.preventDefault();
        });
        const add = document.querySelector(".inner");
        const before = document.querySelector(".before");
  
  
        before.addEventListener("click", (e) => {
          add.classList.toggle("add")
          before.classList.toggle("after")
  
          e.preventDefault();
        });
  
        const addTwo = document.querySelector(".innerTwo");
        const beforeTwo = document.querySelector(".beforeTwo");
  
        beforeTwo.addEventListener("click", (e) => {
          addTwo.classList.toggle("addTwo")
          beforeTwo.classList.toggle("afterTwo")
  
          e.preventDefault();
        });
  
      </script>
  </body>
</html>
